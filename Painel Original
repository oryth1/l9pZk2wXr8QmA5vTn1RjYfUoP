local OrionLib = loadstring(game:HttpGet('https://raw.githubusercontent.com/ionlyusegithubformcmods/1-Line-Scripts/main/Mobile%20Friendly%20Orion'))()
local Player = game.Players.LocalPlayer

local Janela = OrionLib:MakeWindow({
    Name = "Oryth Hub | Universal BR",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "OrythHub",
    IntroText = "Carregando...",
    IntroIcon = "rbxassetid://73200509058998"
})

-- Função Auxiliar para Adicionar Botões
local function AddScriptButton(guia, nome, url)
    guia:AddButton({
        Name = nome,
        Callback = function()
            local ChatService = game:GetService("Chat")
            if Player.Character and Player.Character:FindFirstChild("Head") then
                ChatService:Chat(Player.Character.Head, "Executando...", Enum.ChatColor.White)
            end
            loadstring(game:HttpGet(url))()
        end
    })
end

-- [ Aba: Painel ]
local PainelTab = Janela:MakeTab({
    Name = "Painel",
    Icon = "rbxassetid://11819163504",
    PremiumOnly = false
})

-- Adicionar scripts (painel)
AddScriptButton(PainelTab, "</> Aimbot Universal", "https://raw.githubusercontent.com/Yousuck780/troll-x/main/ahhhh")
AddScriptButton(PainelTab, "</> Gráficos Realistas", "https://raw.githubusercontent.com/Flybobbb/robloxscripts/main/rtx.lua")
AddScriptButton(PainelTab, "</> Infinite Yield", "https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source")
AddScriptButton(PainelTab, "</> Remover Texturas", "https://rawscripts.net/raw/Universal-Script-antilag-15462")
AddScriptButton(PainelTab, "</> Servidor Privado", "https://pastebin.com/raw/A4r1pHJY")
AddScriptButton(PainelTab, "</> TP Tools", "https://pastebin.com/raw/7pQFmXUv")

