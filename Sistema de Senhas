local OrionLib = loadstring(game:HttpGet('https://raw.githubusercontent.com/AlaaEmad23557/Neon-Hub-Lib/main/Lib'))() -- Carregar Orion
local Player = game.Players.LocalPlayer -- Referência ao jogador local

local Window = OrionLib:MakeWindow({
    Name = "Oryth Hub | Universal BR",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "OrythHub",
    IntroText = "Bem-vindo, " .. Player.Name
}) -- Criar a janela principal

-- Configuração
getgenv().Senha = "123(@&@<er" -- Senha correta
getgenv().SenhaInput = "" -- Entrada inicial da senha
local SaveFileName = "OrythHub_SaveData"
local SaveData = { LastAccess = 0 } -- Dados iniciais

-- Função para salvar os dados localmente
local function SaveLocalData()
    writefile(SaveFileName, game:GetService("HttpService"):JSONEncode(SaveData))
end

-- Função para carregar os dados salvos
local function LoadLocalData()
    if isfile(SaveFileName) then
        local success, data = pcall(function()
            return game:GetService("HttpService"):JSONDecode(readfile(SaveFileName))
        end)
        if success and data.LastAccess then
            SaveData = data
        else
            SaveData = { LastAccess = 0 } -- Reverter para padrão se o arquivo estiver corrompido
            SaveLocalData()
        end
    end
end

-- Carregar os dados salvos
LoadLocalData()

-- Verificar se a senha ainda é válida
local function IsPasswordValid()
    local currentTime = os.time()
    local threeDaysInSeconds = 3 * 24 * 60 * 60
    return currentTime - SaveData.LastAccess <= threeDaysInSeconds
end

-- Função para carregar o script principal
function MakeScriptHub()
    loadstring(game:HttpGet('https://raw.githubusercontent.com/oryth1/oryth1/refs/heads/main/Painel%20Original'))() -- Substitua pelo script correto
end

-- Lógica principal
if IsPasswordValid() then
    -- Senha ainda é válida, executar automaticamente
    OrionLib:MakeNotification({
        Name = "Carregando...",
        Content = "Senha válida. Executando o hub automaticamente.",
        Image = "rbxassetid://4483345998",
        Time = 5
    })
    MakeScriptHub()
else
    -- Criar uma aba para o sistema de senha
    local Tab = Window:MakeTab({
        Name = "Painel",
        Icon = "rbxassetid://4483345998",
        PremiumOnly = false
    })

    -- Caixa de texto para inserir a senha
    Tab:AddTextbox({
        Name = "Inserir a senha",
        Default = "", -- Caixa de texto limpa
        TextDisappear = true,
        Callback = function(Value)
            getgenv().SenhaInput = Value
        end
    })

    -- Botão para verificar a senha
    Tab:AddButton({
        Name = "Verificar Senha",
        Callback = function()
            OrionLib:MakeNotification({
                Name = "Verificando Senha...",
                Content = "Verificando a senha que você inseriu...",
                Image = "rbxassetid://4483345998",
                Time = 5
            })
            wait(2) -- Simulação de verificação

            if getgenv().SenhaInput == getgenv().Senha then
                SaveData.LastAccess = os.time() -- Salva a data/hora atual
                SaveLocalData()
                OrionLib:MakeNotification({
                    Name = "Senha Correta!",
                    Content = "A senha que você digitou está correta. Hub será executado automaticamente por 3 dias.",
                    Image = "rbxassetid://4483345998",
                    Time = 5
                })
                wait(1)
                OrionLib:Destroy() -- Fecha o sistema de senha
                wait(0.3)
                MakeScriptHub() -- Carrega o script principal
            else
                OrionLib:MakeNotification({
                    Name = "Senha Incorreta!",
                    Content = "A senha que você digitou está incorreta.",
                    Image = "rbxassetid://4483345998",
                    Time = 5
                })
            end
        end
    })

    -- Botão para copiar o link da senha
    Tab:AddButton({
        Name = "Copiar senha",
        Callback = function()
            setclipboard("https://direct-link.net/1268955/blue-lock-rivals-script") -- Copia o link para a área de transferência
            OrionLib:MakeNotification({
                Name = "Copiado!",
                Content = "O link da senha foi copiado para sua área de transferência.",
                Image = "rbxassetid://4483345998",
                Time = 5
            })
        end
    })

    -- Inicializar a interface
    OrionLib:Init()
end
