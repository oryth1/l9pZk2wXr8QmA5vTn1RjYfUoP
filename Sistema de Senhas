local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

local Window = OrionLib:MakeWindow({Name = "Xethus Hub | Sistema | Universal BR ", HidePremium = false, SaveConfig = true, ConfigFolder = "OrionTest"})



local Tab = Window:MakeTab({
    Name = "Entrada",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Defina a senha válida
local validKey = "Aej96vr4RsG"

-- Nome do arquivo para salvar a senha
local fileName = "Delta.txt"

-- Função para salvar a senha em um arquivo
local function saveKey(key)
    writefile(fileName, key)
end

-- Função para carregar a senha salva
local function loadSavedKey()
    if isfile(fileName) then
        return readfile(fileName)
    else
        return ""
    end
end

-- Carrega a senha salva do arquivo
_G.SavedKey = loadSavedKey()

-- Verifique automaticamente se a senha salva é válida ao carregar o script
if _G.SavedKey == validKey then
    OrionLib:MakeNotification({
        Name = "Senha Salva",
        Content = "Executando comando automaticamente...",
        Image = "rbxassetid://4483345998",
        Time = 5
    })
    -- Executa automaticamente o comando após validação bem-sucedida
    loadstring(game:HttpGet(('https://raw.githubusercontent.com/oryth1/oryth1/refs/heads/main/Painel%20Original'), true))()
    
    -- Destrói o OrionLib após a execução do loadstring
    OrionLib:Destroy()
end

-- Caixa de texto para inserir a senha
Tab:AddTextbox({
    Name = "Ensira a Senha:",
    Default = _G.SavedKey, -- Carrega a senha salva na caixa de texto
    TextDisappear = true,
    Callback = function(value)
        _G.InputKey = value
    end
})

-- Botão para confirmar a senha manualmente
Tab:AddButton({
    Name = "Confirmar Senha",
    Callback = function()
        if _G.InputKey == validKey then
            -- Salva a senha validada no arquivo para a próxima execução
            saveKey(_G.InputKey)
            OrionLib:MakeNotification({
                Name = "Senha Autorizada!",
                Content = "Obrigado. Executando comando...",
                Image = "rbxassetid://4483345998",
                Time = 5
            })
            -- Executa o comando após validação bem-sucedida
            loadstring(game:HttpGet(('https://raw.githubusercontent.com/oryth1/oryth1/refs/heads/main/Painel%20Original'), true))()
            
            -- Destrói o OrionLib após a execução do loadstring
            OrionLib:Destroy()
        else
            OrionLib:MakeNotification({
                Name = "Senha errada!",
                Content = "Nao seja preguiçoso.",
                Image = "rbxassetid://4483345998",
                Time = 5
            })
        end
    end
})

-- Botão para gerar o link da senha
Tab:AddButton({
    Name = "Gerar Link",
    Callback = function()
        -- Copia o link para a área de transferência
        setclipboard("https://rekonise.com/xethus-hub-or-3-dias-or-lessgreater-mdzxb")
    end
})

-- Adiciona uma nova aba chamada "Redes Sociais"
local SocialTab = Window:MakeTab({
    Name = "Redes Sociais",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Botão para copiar o link do Discord
SocialTab:AddButton({
    Name = "Discord Community",
    Callback = function()
        setclipboard("https://discord.gg/UTchgb5sY4")
    end
})

-- Botão para copiar o link do Instagram
SocialTab:AddButton({
    Name = "Instagram para Contato",
    Callback = function()
        setclipboard("https://www.instagram.com/hidleywilliam")
    end
})

-- Botão para copiar o link do Canal no YouTube
SocialTab:AddButton({
    Name = "Canal no YouTube",
    Callback = function()
        setclipboard("https://www.youtube.com/channel/UCX2N85bLl1JwWsb9wQ1NxHg")
    end
})

-- Botão para copiar o link de Executores Atualizados
SocialTab:AddButton({
    Name = "Executores Atualizados",
    Callback = function()
        setclipboard("https://beacons.ai/ethus.oi")
    end
})
